{
  "name": "mcp-hello-world",
  "version": "1.0.0",
  "description": "MCP Server Demo",
  "main": "dist/src/sse-server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "start:http": "npm run build && node dist/simple-http-server.js",
    "start:remote": "npm run build && node dist/examples/remote-tool-server-example.js",
    "dev:remote": "npx nodemon --exec \"npm run build && node dist/examples/remote-tool-server-example.js\"",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,js,json}\" \"examples/**/*.{ts,js,json,html}\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"examples/**/*.{ts,js,json,html}\" \"*.{json,md}\""
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.0",
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.5.3",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "typescript-transform-paths": "^3.5.5"
  },
  "keywords": [
    "mcp",
    "server-sent-events",
    "sse",
    "http-api"
  ],
  "author": "",
  "license": "MIT"
}
