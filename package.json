{
  "name": "mcp-hello-world",
  "version": "1.0.0",
  "description": "MCP Servers with SSE and Streamable HTTP implementations",
  "main": "dist/src/sse-server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "start:sse": "npm run build && node dist/src/sse-server.js",
    "start:streamable": "npm run build && node dist/src/streamable-server.js",
    "dev": "tsx --watch src/sse-server.ts",
    "dev:sse": "tsx --watch src/sse-server.ts",
    "dev:streamable": "tsx --watch src/streamable-server.ts",
    "demo": "tsx demo.ts",
    "test": "tsx examples/test-sse.ts",
    "test:sse": "tsx examples/test-sse.ts",
    "test:streamable": "tsx examples/test-streamable.ts",
    "type-check": "tsc --noEmit",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "nodemon": "^3.0.2",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "mcp",
    "server-sent-events",
    "sse",
    "http-api"
  ],
  "author": "",
  "license": "MIT"
} 